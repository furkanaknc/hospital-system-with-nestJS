generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  password  String
  role      String @default("admin")
}

model Doctor {
  id          Int           @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String        @unique
  password    String
  role        String        @default("doctor")
  clinics     Clinic[]
  date        DateTime
  appointment Appointment[]
}

model Patient {
  id          Int           @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String        @unique
  password    String
  role        String        @default("patient")
  clinics     Clinic[]
  date        DateTime
  appointment Appointment[]
}

model Clinic {
  id          Int           @id @default(autoincrement())
  name        String
  date        DateTime      @default(now())
  doctor      Doctor        @relation(fields: [doctorId], references: [id])
  doctorId    Int
  patient     Patient       @relation(fields: [patientId], references: [id])
  patientId   Int
  appointment Appointment[]
}

model Appointment {
  id        Int      @id @default(autoincrement())
  date      DateTime @default(now())
  doctor    Doctor   @relation(fields: [doctorId], references: [id])
  doctorId  Int
  patient   Patient  @relation(fields: [patientId], references: [id])
  patientId Int
  clinic    Clinic   @relation(fields: [clinicId], references: [id])
  clinicId  Int
}
